            </div>
        </div>
    </div>
</div>


<!-- Brows by category -->
<div class="container">
    <div class="category-section" id="categorySection">
        <h4 class="mb-4">Browse By Category</h4>
        <div class="row row-cols-3 row-cols-md-6 g-3 justify-content-center">
            <div class="col">
                <a asp-controller="Products" asp-action="Index" asp-route-Category="phones" class="category-box" data-delay="0.1s">
                    <i class="fas fa-mobile-alt"></i>
                    <p>Phones</p>
                </a>
            </div>
            <div class="col">
                <a asp-controller="Products" asp-action="Index" asp-route-Category="smartwatches" class="category-box" data-delay="0.2s">
                    <i class="fas fa-clock"></i>
                    <p>Smart Watches</p>
                </a>
            </div>

            <div class="col">
                <a asp-controller="Products" asp-action="Index" asp-route-Category="headphones" class="category-box" data-delay="0.4s">
                    <i class="fas fa-headphones-alt"></i>
                    <p>Headphones</p>
                </a>
            </div>

            <div class="col">
                <a asp-controller="Products" asp-action="Index" asp-route-Category="Computer" class="category-box" data-delay="0.5s">
                    <i class="fas fa-desktop"></i>
                    <p>Computers</p>
                </a>
            </div>

            <div class="col">
                <a asp-controller="Products" asp-action="Index" asp-route-Category="Gaming" class="category-box" data-delay="0.6s">
                    <i class="fas fa-gamepad"></i>
                    <p>Gaming</p>
                </a>
            </div>
        </div>
    </div>
</div>

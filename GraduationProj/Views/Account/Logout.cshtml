@{
    ViewData["Title"] = "Logout";
}

<style>
    .logout-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        background: url('../images/wallpaper2.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .logout-card {
        background: rgba(255, 255, 255, 0.85);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.2);
        width: 360px;
        text-align: center;
        transition: transform 0.3s ease;
    }

    .logout-card:hover {
        transform: translateY(-8px);
    }

    .logout-card img {
        width: 120px;
        margin-bottom: 24px;
        transition: transform 0.3s ease;
    }

    .logout-card img:hover {
        transform: scale(1.1);
    }

    .logout-card h2 {
        margin-bottom: 20px;
        color: #333;
        letter-spacing: 1px;
    }
    .logout-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: url('../images/wallpaper2.jpg') no-repeat center center fixed;
      background-size: cover;
    }
    .logout-card {
      background: rgba(255,255,255,0.85);
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.2);
      width: 360px;
      text-align: center;
    }
    .logout-button {
      width: 100%;
      padding: 12px;
      background: #cc0000;
      border: none;
      border-radius: 6px;
      color: #fff;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.3s;
    }
    .logout-button:hover {
      background: #b50000;
    }
</style>

<div class="logout-container" style="padding-top:80px; padding-bottom:80px">
    <div class="logout-card">
        <h2>Confirm Logout</h2>
        <p>Are you sure you want to sign out?</p>
        <form asp-action="LogoutConfirmed" asp-controller="Account" method="post">
            <button type="submit" class="logout-button">Yes, Log Me Out</button>
        </form>
        <div style="margin-top:16px;">
            <a asp-action="Index" asp-controller="Home">Cancel</a>
        </div>
    </div>
</div>